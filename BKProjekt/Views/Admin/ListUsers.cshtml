@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

    <h3>Lista użytkowników</h3>

<table class="table table-secondary table-striped-columns table-hover rounded-3">
    <thead>
        <tr>
            <th>
                Nazwa użytkownika
            </th>
            <th>
                Ustaw bibliotekarza
            </th>
            <th>
                Usuń
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                    <form asp-action="SetKeeper" method="post" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-success">Ustaw</button>
                    </form>
                    </td>
                    <td>
                        <form asp-action="DeleteUser" method="post" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger">Usuń</button>
                        </form>
                    </td>
                        
                    </tr>
            }
        </tbody>
</table>